package VetoresMatrizes;

import java.util.Random;
import java.util.Scanner;

public class Dado {
	int i,media, soma=0,maior=0,cont=0;
	Random x = new Random();
	int v[]= new int[10];
	private Scanner ler;
	
	public void Calc() {
		for( i=0;i<10;i++) {
			System.out.println(x.nextInt(6));
		}
		for( i=0;i<10;i++) {
			if(v[x.nextInt(6)]>maior) {
				maior = v[x.nextInt(6)];
			}
		}
		for( i=0;i<10;i++) {
			if(v[x.nextInt(6)]==maior) {
				cont++;
			}
		}
		System.out.println("a maior face lançada foi: "+maior+" um total de vezes: "+cont);
		for( i=0;i<10;i++) {
			soma=soma + v[x.nextInt(6)];
		}
		System.out.println("A Media: "+soma/10);
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Dado d = new Dado();
		d.Calc();
	}

}
