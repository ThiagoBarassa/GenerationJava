package VetoresMatrizes;

import java.util.Scanner;

public class Dado {
	int i,media, soma=0,maior=0,cont=0,x;
	int v[]= new int[10];
	private Scanner ler;
	
	public void Calc() {
		do {
		for( i=0;i<10;i++) {
			ler = new Scanner(System.in);
			System.out.println("Digite um numero: ");
			v[x] = ler.nextInt();
		}
		}while(x>=1 && x<=6);
		for( i=0;i<10;i++) {
			if(v[i]>maior) {
				maior = v[i];
			}
		}
		for( i=0;i<10;i++) {
			if(v[i]==maior) {
				cont++;
			}
		}
		System.out.println("a maior face lançada foi: "+maior+" um total de vezes: "+cont);
		for( i=0;i<10;i++) {
			soma=soma + v[i];
		}
		System.out.println("A Media: "+soma/10);
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Dado d = new Dado();
		d.Calc();
	}

}
