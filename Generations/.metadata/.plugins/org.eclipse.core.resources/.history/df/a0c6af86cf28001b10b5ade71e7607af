package ControlFlow2;

import java.util.Scanner;

public class Senha {
	public int senha = 1234;
	private Scanner ler;
	
	public void Print() {
		ler = new Scanner(System.in);
		System.out.println("Digite sua senha: ");
		senha = ler.nextInt();
	}
	public int Validar(senha) {
		if(senha == senha) {
			return System.out.println("Acesso Permitido");
		}else {
			System.out.println("Acesso negado");
		}
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Senha s = new Senha();
		s.Print();
		s.Validar();

	}

}
